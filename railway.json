{
    "build": {
      "builder": "DOCKERFILE",
      "dockerfilePath": "./Dockerfile",
      "watchPatterns": [
        "app/**",
        "requirements.txt",
        "Dockerfile",
        "railway.json"
      ]
    },
    "deploy": {
      "healthcheckPath": "/",
      "healthcheckTimeout": 300,
      "startupTimeout": 300,
      "restartPolicyType": "always",
      "restartPolicyMaxRetries": 10
    }
  }  